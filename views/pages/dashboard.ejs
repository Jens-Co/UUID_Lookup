<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>
<body>
  <div class="container center dashboard">
    <div class="card dashboard">
      <div class="card-header">
        <div class="container">
          Welcome <%= username %>, to your dashboard.
        </div>
      </div>
      <div class="card-body">
        <div class="container">
          <br>
          <p class="lead"><%= apiKeyMessage %></p>
          <p>API Key Usage: <%= requestsPerHour %> / 200 Requests per Hour</p>
          <p>Total Requests: <%= totalRequests %></p>
          <br>
          <form action="/dashboard/generate-api-key" method="POST">
            <button class="btn btn-mc-gray btn-large" type="submit">Generate or Regenerate API Key</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
<%- include('../partials/footer.ejs') %>